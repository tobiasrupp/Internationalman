<% provide(:video_player_script, '<script type="text/javascript" src="http://cdn.sublimevideo.net/js/nv8041sd.js"></script>'.html_safe) %>
<% if @selected_video.nil? %>
	<% return %>
<% end %>
<%= render 'shared/like_button' %>
<%= render :partial => 'video_details', :formats=>[:html], :handlers=>[:erb] %>
<% if !@selected_video.embed_code.blank? and @selected_video.copyright_cleared == true %>
	<div class="embedded_video_viewer"><%= raw @selected_video.embed_code %></div>
<% elsif !@selected_video.source_url.blank? and @selected_video.copyright_cleared == true %>
	<div class="jwplayer_viewer">
		<object data="/jwplayer/player.swf" name="player1" id="player1" type="application/x-shockwave-flash" height="300" width="<%= @video_viewer_width %>"><param value="true" name="allowfullscreen"><param value="always" name="allowscriptaccess"><param name="movie" value="/jwplayer/player.swf"><param value="file=<%= @selected_video.source_url %>" name="flashvars"></object>
	</div>
<% end %>
<%= render 'shared/like_button_meta_tags' %>
