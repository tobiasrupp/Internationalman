
<% if @show_fb_like_button == true %>
	<% provide(:like_button_script, "<div id=\"fb-root\"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = \"//connect.facebook.net/en_GB/all.js#xfbml=1\";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>".html_safe) %>
	<div class="share_section">
		<div class="fb-like" data-href="<%= request.protocol + request.host_with_port + request.fullpath %>" data-send="false" data-width="250" data-show-faces="false" data-layout="button_count" data-font=""></div>
	</div>
<% end %>