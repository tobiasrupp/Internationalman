<% if !@selected_article.nil? and !@selected_article.lon.blank? and !@selected_article.lat.blank? %>
	<% lat = @selected_article.lat.to_s %>
	<% lon = @selected_article.lon.to_s %>
	<% if @feed == true %>
		<div class="button">
			<%= link_to t(:show_on_map), map_path + '?lon=' + lon + '&lat=' + lat, :class => "btn btn-small" %>
		</div>
	<% else %>
		<div class="button">
			<span class="globe_btn">
				<%= link_to '', map_path + '?lon=' + lon + '&lat=' + lat, :title => t(:show_on_map) %>
			</span>
		</div>
	<% end %>	
	<% exit = true %>
<% elsif !@selected_track.nil? and !@selected_track.longitude.blank? and !@selected_track.latitude.blank? %>
	<% lat = @selected_track.latitude %>
	<% lon = @selected_track.longitude %>
<% elsif !@selected_video.nil? and !@selected_video.longitude.blank? and !@selected_video.latitude.blank? %>
	<% lat = @selected_video.latitude %>
	<% lon = @selected_video.longitude %>
<% elsif !@selected_post.nil? and !@selected_post.longitude.blank? and !@selected_post.latitude.blank? %>
	<% lat = @selected_post.latitude %>
	<% lon = @selected_post.longitude %>
<% else %>
	<% return %>
<% end %>	
<% if exit != true %>
	<% if @feed == true %>
		<div class="button">
			<%= link_to t(:show_on_map), get_map_url(lon, lat), :target => '_blank', :class => "btn btn-small" %>
		</div>
	<% else %>
		<div class="button">
			<span class="globe_btn">
				<%= link_to '', get_map_url(lon, lat), :title => t(:show_on_map), :target => '_blank' %>
			</span>
		</div>
	<% end %>
<% end %>
